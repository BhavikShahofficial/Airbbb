<% if(success && success.length) { %>
<div
  class="alert alert-success mt-3 mb-3 alert-dismissible fade show col-md-6 col-sm-10 offset-md-3"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) { %>
<div
  class="alert alert-danger mt-3 mb-3 alert-dismissible fade show col-md-6 col-sm-10 offset-md-3"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
